<div id="text_question_form" style="display: none;">
  <div class="form-group">
    <%= f.label :content, 'Text Question Content' %>
    <%= f.text_area :content_text, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.label :correct_option, 'Correct Option ' %>
    <%= f.text_field :correct_option_text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :score, 'Text Question Score' %>
    <%= f.text_area :score_text, class: 'form-control' %>
  </div>


  <div class="form-group">
   <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
