<div id="mcqs_question_form" style="display: none;">
  <div class="form-group">
    <%= f.label :content, 'MCQ Question Content' %>
    <%= f.text_area :content_mcqs, class: 'form-control' %>
  </div>
 
  <!-- Separate fields for each option -->
  <div class="form-group">
    <%= f.label :choices_0, 'Option A' %>
    <%= f.text_field :choices_0, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :choices_1, 'Option B' %>
    <%= f.text_field :choices_1, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :choices_2, 'Option C' %>
    <%= f.text_field :choices_2, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :choices_3, 'Option D' %>
    <%= f.text_field :choices_3, class: 'form-control' %>
  </div>

  <!-- Correct Option for MCQs -->
  <div class="form-group">
    <%= f.label :correct_option, 'Correct Option (e.g., A, B, C, D)' %>
    <%= f.text_field :correct_option_mcqs, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :score, 'Marks ' %>
    <%= f.text_field :score_mcqs, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
