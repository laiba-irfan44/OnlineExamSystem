<div class="container">
  <h1 class="text-center mt-4 bg-primary ">My Exams and Total Scores</h1>

  <% if @results %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Exam</th>
          <th>Total Score</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
          <tr>
            <td><%= result.exam.subject %></td>
            <td><%= result.total_score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No exams and scores available.</p>
  <% end %>
 <%= link_to 'Back', student_index_path_path, class: 'btn btn-success' %>
</div>
